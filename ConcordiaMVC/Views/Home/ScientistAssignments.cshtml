@model ScientistAssignmentsModel

@{
    ViewData["Title"] = "List of Assignments";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h1 class="display-4">@Model.Scientist.Name</h1>
    <ul class="list-group list-group-flush align-items-center">
        @foreach (var card in Model.Cards)
        {
            <li class="list-group-item">
                <div class="card">
                    <div class="d-flex flex-column card-body">
                        <h5 class="card-title">@card.Priority</h5>
                        <h6 class="card-title">@card.Title</h6>
                        <h6 class="card-title">@card.DueBy</h6>
                        
                        <div class="d-flex flex-column align-items-end card-footer">
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>