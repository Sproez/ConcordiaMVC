@model ListSelectionModel

@{ ViewData["Title"] = "Change card status"; }

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form class="d-flex flex-column card myForm" asp-action="ChangeStatus" asp-controller="Card" method="post">
        <div class="d-flex flex-column form-group">
            <label>Select the new status</label>
            @Html.DropDownListFor(x => x.SelectedId, Model.Lists, null, new { required = "required", @class = "form-control text-center myInput" })

            <input asp-for="@Model.CardId" type="hidden" value="@Model.CardId" />
        </div>
        <button id="myButton" type="submit" class="btn btn-sm btn-outline-primary">Change status</button>
    </form>
</div>